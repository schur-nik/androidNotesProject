<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="default_main_active_button">
        <item name="android:textSize">@dimen/main_active_button_text_20sp</item>
        <item name="android:background">@drawable/main_active_button_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="default_text">
        <item name="android:textSize">@dimen/default_common_text_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="default_clickable_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="splash_textview_app_name">
        <item name="android:textSize">@dimen/splash_textview_app_name_textsize_55sp</item>
        <item name="android:fontFamily">@font/aclonica</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="default_title_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_title_text_40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="add_note_title_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/add_note_title_text_25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="default_edittext">
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="default_toolbar_clickable_textview">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>